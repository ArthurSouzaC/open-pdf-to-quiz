{
  "name": "pdf-to-quiz",
  "private": true,
  "version": "1.0.0",
  "main": "electron/electron.js",
  "description": "Open source tool that takes content from a PDF file and generate custom quizzes using AI through ollama.",
  "author": "ArthurSouzaC",
  "scripts": {
    "dev:vite": "vite",
    "dev:electron": "concurrently -k \"cross-env BROWSER=none npm run dev:vite\" \"wait-on tcp:3000 && cross-env IS_DEV=true electron .\"",
    "build:vite": "tsc --noEmit && cross-env ELECTRON=true vite build",
    "build:electron": "electron-builder",
    "build": "npm run build:vite && npm run build:electron"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.7",
    "@tailwindcss/vite": "^4.0.16",
    "axios": "^1.8.4",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.21.2",
    "jotai": "^2.12.2",
    "multer": "^1.4.5-lts.2",
    "ollama": "^0.5.14",
    "pdf-parse": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.0.16",
    "vite-express": "^0.20.0",
    "wait-on": "^8.0.3",
    "wouter": "^3.6.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "electron": "^35.0.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.electron.app.pdftoquiz",
    "productName": "Open PDF to Quiz",
    "artifactName": "pdf-to-quiz-installer.${ext}",
    "copyright": "Copyright Â© 2025 ArthurSouzaC",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "./public/icon.png"
    },
    "win": {
      "icon": "./public/icon.png",
      "target": "msi"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}
